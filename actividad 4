// Ejercicio 1

// Utilizando lo aprendido escribir el código necesario para que dada una distancia determine el medio de transporte apropiado de acuerdo a las siguientes reglas:

// 0 a 1000 metros = pie
// 1000 a 10000 metros = bicicleta
// 10000 a 30000 metros = colectivo
// 30000 a 100000 metros = auto
// +100000 = avión

const cantidad = parseInt(prompt(`buenas cuantos metros deseas recorrer:`))
if (cantidad > 0 && cantidad <= 1000) {

    document.write(`ir a pie si deseas recorrer ${cantidad} metros `)

} else if ( cantidad > 1000 && cantidad <= 10000)

        document.write(`ir en bici si deseas recorrer ${cantidad} metros `)
else if (cantidad > 10000 && cantidad <= 30000)
    {
        document.write(`ir en colectivo si deseas recorrer ${cantidad} metros `)
    } 
    else if (cantidad > 30000 && cantidad <=100000)
    {
        document.write (`ir en auto si deseas recorrer ${cantidad} metros `)
    }
    else if (cantidad > 100000 ) {
        document.write (`ir en avion si deseas recorrer ${cantidad} metros `)
    }


//     Ejercicio 2

// Haciendo uso de los bucles, recorrer un array de números y determinar cual es el mayor
const numeros = [5, 2, 9, 4, 8];
let numeroMayor = numeros[0];

for (let i = 1; i < numeros.length; i++) {
  if (numeros[i] > numeroMayor) {
    numeroMayor = numeros[i];
  }
}

document.write('El número mayor es:', numeroMayor);



